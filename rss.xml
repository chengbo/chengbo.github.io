---
layout: nil
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">

  <channel>
    <title>{{ site.name }}</title>
    <link>{{ site.link }}</link>
    <atom:link href="{{ site.link }}/rss.xml" rel="self" type="application/rss+xml" />
    <description>A blog like any other, except this one is mine.</description>
    <language>zh-cn</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %Z" }}</lastBuildDate>

    {% for post in site.posts %}
      <item>
        <title>{{ post.title }}</title>
        <link>{{ site.link }}{{ post.url }}</link>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %Z" }}</pubDate>
        <author>Bo Cheng</author>
        <guid>{{ site.link }}{{ post.url }}</guid>
        <description>{{ post.content | xml_escape }}</description>
      </item>
    {% endfor %}

  </channel>
</rss>
